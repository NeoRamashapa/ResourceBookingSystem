@model InternalResourceBookingSystem.Models.Resource

@{
    ViewData["Title"] = "Booking Details";
    var upcomingBookings = Model.Bookings?
        .Where(b => b.StartTime > DateTime.Now)
        .OrderBy(b => b.StartTime)
        .ToList();
}

<h1>Booking Details</h1>

<div>
    <h4>Resource</h4>
    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
    </dl>
</div>

<h4>Upcoming bookings</h4>

@{
if (Model.Bookings != null && Model.Bookings.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Booked By</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Purpose</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in upcomingBookings)
            {
                <tr>
                    <td>@booking.BookedBy</td>
                    <td>@booking.StartTime.ToString("g")</td>
                    <td>@booking.EndTime.ToString("g")</td>
                    <td>@booking.purpose</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No upcoming bookings.</p>
}}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<div>
    <a asp-action="Create" asp-controller="Bookings" asp-route-resourceId="@Model.Id" class="btn btn-primary">Book This Room</a>
</div>